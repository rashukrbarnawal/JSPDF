  body(style="background-image: url('images/w6.jpg'); background-repeat: no-repeat; background-size: cover")
    .container(style='margin-to:100px')
      ul.nav.nav-tabs.nav-justified
        li
          a.text-primary(data-toggle='tab', href='#login')
            b LOGIN
        li
          a.text-primary(data-toggle='tab', href='#signup')
            b REGISTER
      .tab-content
        #login.tab-pane.fade.active.in
          form.form-group.col-md-4.col-md-offset-4(style='margin-top: 200px; border: 2px solid black; padding: 30px; border-radius: 5%; box-shadow: 10px 10px 10px 10px;', action='/signin', ,method='post')
            img.img-circle.img-center(src='images/logo.png', style='height: 150px; width: 150px; margin-left:90px;')
            h1.text-center(style='text-shadow: 5px 5px 5px; color:black')
                u Login
            hr
            h3.text-center.text-danger #{error}
            label
              b Username:
            input.form-control(type='text', placeholder='Enter username here', required='',name='username')
            br
            br
            label Password :
            input.form-control(placeholder='Enter Password here', type='password',name='password')
            br
            br
            input.btn.btn-info(type='submit')
        #signup.tab-pane.fade
        
          
            img.img-center.img-circle(src='images/logo.png', style='height: 150px; width: 150px; margin-left:90px;')
            h1.text-center(style='text-shadow: 5px 5px 5px') 
                u STUDENT REGISTRTATION
            h3.text-center.text-danger #{exist}
            form(method='post',action='/upload',enctype='multipart/form-data' ).col-md-6.col-md-offset-2
                label Valid Till :
                input(type='date',name='validtill',required='').form-control
                br
                br
                label Name :
                input(type='text',name='name',placeholder='enter Student name',required='').form-control
                br
                br
                label ROLLNO :
                input(type='text',name='rollno',placeholder='enter ROllno',required='' maxlength='10' minlength='10').form-control
                br
                br
                label college :
                select#sel1.form-control(name='college' required='')
                  option(value='') ---select---
                  option(value='aec') AEC
                  option(value='acet') ACET
                  option(value='acoe') ACOE
                br
                br
                label Department :
                select.form-control(name='department' required='')
                    option(value='') ---select---
                    option(value='Computer Science Engineering') Computer Science Engineering
                    option(value='Electrical And Electronics Engineering') Electrical and Electronics Engineering
                    option(value='Mechanical Engineering') Mechanical Engineering
                    option(value='Civil Engineering') Civil Engineering
                    option(value='Electrical and Communication Engineering') Electrical and Communication Engineering
                
                br
                br
                label city :
                select.form-control(name='city' required='')
                    option(value='') ---select---
                    option(value='kakinada') kakinada
                    option(value='rajhamudary') rajhamudary
                    option(value='amalapuram') amalapuram
                    option(value='Hostel') Hostel
                br
                br
              
                label course:
                input(type='text' name='course' placeholder='enter course' required='').form-control
                br
                br
                label Upload Photo:
                input(type='file' name='photo' placeholder='upload photo' required='').form-control
                
                br
                br
              
                input.btn.btn-info(type='submit')
